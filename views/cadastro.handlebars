
    <main class="container mt-4">
        <div class="container">
            <div class="flex justify-center items-center ">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold px-6 py-3 rounded">
            <a href="/cadastroGuia" class="block">Cadastrar Guia</a> 
        </button>
        </div>
    <h1>Formulário de Cadastro de Produto</h1>
    <form action="/cadastrar" method="post" enctype="multipart/form-data">
        <div class="mb-3">
        <input name="nome" class="form-control" type="text" placeholder="Nome do produto">
        </div>
        <div class="mb-3">
        <input name="valor" class="form-control" type="number" placeholder="Valor do produto">
        </div>
        <div class="mb-3">
        <input name="marca" class="form-control" type="text" placeholder="Marca do produto">
        </div>
        <div class="mb-3">
        <select name="categoria" class="form-control">
                <option value="varas">Varas</option>
                <option value="carretilhas">Carretilhas</option>
                <option value="molinetes">Molinetes</option>
                <option value="linhas">Linhas</option>
                <option value="anzois">Anzóis</option>
                <option value="iscas">Iscas</option>
                <option value="caixas">Caixas</option>
                <option value="acessorios">Acessórios</option>
                <option value="eletronicos">Eletrônicos</option>
                <option value="barcos">Barcos Equipamentos</option>
                <option value="vestuario">Vestuário</option>
                <option value="conveniencia">Conveniência</option>
                <option value="outros">Outros</option>
            </select>
        </div>
        <div class="mb-3">
        <input name="imagem" class="form-control" type="file">
        </div>
        <button class="btn btn-primary">Cadastrar</button>
    </form>

    <hr>
    <h2>Produtos Cadastrados</h2>
    <div class="row">
        {{#each produtos}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
            <img src="/imagens/{{this.imagem}}" class="card-img-top" alt="{{this.nome}}">
            <div class="card-body">
            <h5 class="card-title">{{this.nome}}</h5>
            <p>R$ {{this.valor}}</p>
            <p>Marca: {{this.marca}}</p>
            <p>Categoria: {{this.categoria}}</p>
            </div>
            <div class="card-footer d-flex justify-content-between">
            <a href="/formularioEditar/{{this.codigo}}" class="btn btn-warning btn-sm">Alterar</a>
            <a href="/remover/{{this.codigo}}/{{this.imagem}}" class="btn btn-danger btn-sm"
                onclick="return confirm('Remover este produto?')">Remover</a>
            </div>
        </div>
        </div>
        {{/each}}
    </div>
    </main>
